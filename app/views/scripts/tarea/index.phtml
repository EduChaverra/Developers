                <button class="bg-green-500 text-white px-4 py-2 rounded" onclick="window.location.href='/crear'">+ Crear Nueva Tarea</button>
            </div>
            <ul class="divide-y divide-gray-200">
                <!-- Ejemplo de tarea -->
                <li class="py-4 flex justify-between items-center">
                    <div>
                        <h3 class="text-lg font-bold">Nombre de la tarea</h3>
                        <p>Descripción de la tarea</p>
                    </div>
                    <div class="flex space-x-2">
                        <button class="bg-yellow-500 text-white px-4 py-2 rounded" onclick="window.location.href='/editar/1'">Editar</button>
                        <button class="bg-red-500 text-white px-4 py-2 rounded" onclick="confirmDelete(1)">Eliminar</button>
                    </div>
                </li>
                <!-- Más tareas aquí -->
            </ul>
        </div>
    </div>

